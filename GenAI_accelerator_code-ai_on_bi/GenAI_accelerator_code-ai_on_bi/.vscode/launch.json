    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: VectorDB File",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/populate_vector_db.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/datachat/creds.env",
        },
        {
            "name": "Python Debugger: App",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/streamlit",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/datachat/creds.env",
            "args": [
                "run",
                "app.py"
            ]
        }
    ]
}
